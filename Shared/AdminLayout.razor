@inherits LayoutComponentBase
@inject NavigationManager NavigationManager
@inject ILocalStorageService LocalStorage
@attribute [Authorize(Roles = "Admin")]




<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />
<MudPopoverProvider />

<MudGrid Justify="Justify.Center">
    <MudAppBar Style="background-color: transparent; z-index: 100">
        <MudContainer Class="d-none d-lg-flex justify-content-start">
            <MudButton Class="btn-appbar-menu m-3" Style="height: 40px; width: 100px; color: white" Href="/dashboard">Dashboard</MudButton>
            <MudButton Class="btn-appbar-menu m-3" Style="height: 40px; width: 100px; color: white" Href="/capstone">Capstones</MudButton>
            <MudButton Class="btn-appbar-menu m-3" Style="height: 40px; width: 100px; color: white" Href="/account">Account</MudButton>
            <MudButton Class="btn-appbar-menu m-3" Style="height: 40px; width: 100px; color: white" Href="/adminratings">Ratings</MudButton>
        </MudContainer>

        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" OnClick="@ToggleDrawer" Edge="Edge.End" Class="d-md-none" />

        <MudContainer Class="d-none d-md-flex justify-content-end">
            <MudIconButton Class="btn-appbar-menu" Style="color: crimson" OnClick="Logout">
                Logout
                <MudIcon Icon="@Icons.Material.Filled.Logout"/>
            </MudIconButton>
        </MudContainer>
    </MudAppBar>

    <MudDrawer Breakpoint="Breakpoint.Xs" Class="d-lg-none" @bind-Open="drawerOpen" Color="Color.Dark" ClipMode="DrawerClipMode.Never" Anchor="Anchor.Right" Elevation="3">
        <MudContainer Class="d-grid gap-5">
            <MudContainer Class="d-grid row-cols-8 pt-5 ms-6">
                <MudButton Class="btn-appbar-menu m-2" Style="color: white" Href="/capstone">Capstones</MudButton>
                <MudButton Class="btn-appbar-menu m-2" Style="color: white" Href="">Account</MudButton>
                <MudButton Class="btn-appbar-menu m-2" Style="color: white" Href="/adminratings">Ratings</MudButton>
                <MudIconButton Class="btn-appbar-menu m-2" Style="color: orangered;" OnClick="Logout">
                    Logout
                    <MudIcon Icon="@Icons.Material.Filled.Logout" />
                </MudIconButton>
            </MudContainer>
        </MudContainer>
    </MudDrawer>

    <MudContainer MaxWidth="MaxWidth.ExtraLarge" Style="background-image: url(VividBg.jpg);
                                                        background-repeat: no-repeat;
                                                        background-position: center;
                                                        background-size: cover;
                                                        height: 103vh">
        @Body
    </MudContainer>
</MudGrid>