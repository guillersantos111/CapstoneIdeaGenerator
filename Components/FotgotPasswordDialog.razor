@page "/resetpassworddialog"

<MudDialog>
    <MudText>Forgot Password</MudText>
    <MudContainer>
        <MudTextField Label="Enter your email" @bind-Value="emailForReset" FullWidth />
        @if (!string.IsNullOrEmpty(forgotPasswordMessage))
        {
            <MudAlert Severity="Severity.Error" Dense="true">@forgotPasswordMessage</MudAlert>
        }
    </MudContainer>
    <MudContainer>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton OnClick="Submit">Submit</MudButton>
    </MudContainer>
</MudDialog>
