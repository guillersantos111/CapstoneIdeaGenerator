@page "/forgotpassworddialog"
@inherits ForgotPasswordDialogBase

<MudDialog Style="max-height:150; width: 500px">
    <DialogContent>
        <MudText Class="fs-5 fw-bolder">Forgot Password</MudText>
        <MudContainer Class="mb-10">
            <MudContainer Class="mb-5">
                <MudTextField Label="Enter your email" @bind-Value="AdminForgot.Email" FullWidth />
            </MudContainer>
            <MudContainer>
                <MudButton Color="Color.Info" OnClick="Submit">Submit</MudButton>
                <MudButton Color="Color.Error" OnClick="Cancel">Close</MudButton>
            </MudContainer>
        </MudContainer>
        @if (!string.IsNullOrEmpty(ResetToken))
        {
            <MudText Class="fs-5 fw-bolder">Reset Password Code</MudText>
            <MudContainer>
                <MudContainer Class="mb-5">
                    <MudTextField @bind-Value="ResetToken" ReadOnly></MudTextField>
                </MudContainer>
                <MudContainer>
                    <MudTooltip>
                        <MudIconButton Icon="@Icons.Material.Filled.ContentCopy" OnClick="CopyTokenToClipboard">Copy/Reset</MudIconButton>
                    </MudTooltip>
                </MudContainer>
            </MudContainer>
        }

        <MudContainer>
            @if (!string.IsNullOrEmpty(ErrorMessage))
            {
                <MudText>@ErrorMessage</MudText>
            }
        </MudContainer>
    </DialogContent>
</MudDialog>

