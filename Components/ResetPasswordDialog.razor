@page "/resetpassworddialog"
@inherits ResetPasswordDialogBase


<MudDialog>
    <DialogContent>
        <MudContainer>
            <MudText>Reset Password</MudText>
            <MudTextField Label="Enter New Password" @bind-Value="adminPasswordReset.NewPassword" FullWidth InputType="showPassword.InputType" Required="true"></MudTextField>
            <MudTextField Label="Confirm Password" @bind-Value="adminPasswordReset.ConfirmPassword" FullWidth
                          Adornment="Adornment.End"
                          AdornmentIcon="@showPassword.Icon"
                          AdornmentAriaLabel="Password Visivility"
                          OnAdornmentClick="ShowPassword"
                          InputType="showPassword.InputType"
                          Required="true"></MudTextField>

            <MudTextField Label="Enter Reset Token" @bind-Value="adminPasswordReset.Token" FullWidth></MudTextField>

            <MudContainer>
                <MudButton Color="Color.Info" OnClick="Submit">Submit</MudButton>
                <MudButton Color="Color.Error" OnClick="Cancel">Cancel</MudButton>
            </MudContainer>
        </MudContainer>
        @if (!string.IsNullOrEmpty(response.ErrorMessage))
        {
            <MudText Color="Color.Error">@response.ErrorMessage</MudText>
        }
    </DialogContent>
</MudDialog>