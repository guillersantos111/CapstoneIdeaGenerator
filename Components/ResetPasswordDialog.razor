@page "/resetpassworddialog"
@inherits ResetPasswordBase

<MudDialog DisableSidePadding="false">
    <DialogContent>
        <MudText Typo="Typo.h5">Reset Password</MudText>

        <MudTextField T="string" Label="Email" @bind-Value="passwordResetRequest.Email" Variant="Variant.Outlined" FullWidth Required="true" />
        <MudTextField T="string" Label="Reset Token" @bind-Value="passwordResetRequest.Token" Variant="Variant.Outlined" FullWidth Required="true" />
        <MudTextField T="string" Label="New Password" @bind-Value="passwordResetRequest.NewPassword" Variant="Variant.Outlined" FullWidth Required="true" InputType="InputType.Password" />

        <MudButton Class="pt-3" Style="background-color: cornflowerblue; height: 50px" Variant="Variant.Filled"  FullWidth OnClick="ResetPasswordDialogOnClick" Disabled="isLoading">
            @if (isLoading)
            {
                <MudProgressCircular Indeterminate Size="Size.Medium" />
            }
            else
            {
                @:Reset Password
            }
        </MudButton>
    </DialogContent>
</MudDialog>
