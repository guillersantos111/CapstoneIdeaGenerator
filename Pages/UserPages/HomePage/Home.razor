@page "/home"
@layout HomeLayout



<MudGrid>
    <MudGrid Justify="Justify.Center">
        <MudContainer Class="mt-20 pt-20">
            <MudContainer>
                <MudText Class="position-absolute top-25 start-0 ms-15" Style="font-size: 45px; font-weight: bolder; color: white;">Welcome To The Capstone <br /> Shared Idea Generator!</MudText>
            </MudContainer>
        </MudContainer>
    </MudGrid>

    <MudImage Class="position-absolute top-0 end-0 mt-15 pt-20" Style="width: 800px; height: 800px; background-color: transparent;" Src="Device.gif"></MudImage>

    <MudContainer>
        <MudItem xs="12" sm="2">
            <MudSwitch Class="position-absolute top-0 end-0 mt-20 pt-20" Style="color: white;" Label="Reverse" @bind-Value="reverse" Disabled="IsSwitchDisabled()" Color="Color.Primary" />
        </MudItem>
    </MudContainer>

    <MudGrid  Style="padding-top: 500px;">
        <MudItem Style="width: 900px; margin-left: 200px">
            <MudTimeline Reverse="reverse" TimelineOrientation="orientation" TimelinePosition="position">
                <MudTimelineItem Color="Color.Success" Variant="Variant.Filled">
                    <ItemContent>
                        <MudAlert Class="text-center" Severity="Severity.Success">
                            See more about Capstone Shared Idea Generator
                        </MudAlert>
                    </ItemContent>
                    <ItemOpposite>
                        <MudButton Color="Color.Success" Class="btn-appbar-menu" Href="/about">About</MudButton>
                    </ItemOpposite>
                </MudTimelineItem>

                <MudTimelineItem Color="Color.Warning" Variant="Variant.Filled">
                    <ItemContent>
                        <MudAlert Class="text-center" Severity="Severity.Warning">
                            Explore and Discover more new Capstone Ideas with Capstone Shared Idea Generator
                        </MudAlert>
                    </ItemContent>
                    <ItemOpposite>
                        <MudButton Color="Color.Warning" Class="btn-appbar-menu" Href="/generator">Generator</MudButton>
                    </ItemOpposite>
                </MudTimelineItem>

                <MudTimelineItem Color="Color.Error" Variant="Variant.Filled">
                    <ItemContent>
                        <MudAlert Class="text-center" Severity="Severity.Error">
                            Check the best Capstone Ideas
                        </MudAlert>
                    </ItemContent>
                    <ItemOpposite>
                        <MudButton Color="Color.Error" Class="btn-appbar-menu" Href="/ratings">Ratings</MudButton>
                    </ItemOpposite>
                </MudTimelineItem>
            </MudTimeline>
        </MudItem>
    </MudGrid>

    <MudContainer Class="" Style="position: absolute; bottom: 0;">
        <MudContainer Class="d-flex gap-6 mb-3">
            <MudText Style="font-size: 11px; font-weight: bolder">
                <MudImage Src="icons8-bootstrap-48.png" Style="height: 19px; width: 19px;" />
                Bootstrap
            </MudText>

            <MudText Style="color: limegreen; font-size: 13px; font-weight: bolder">C#</MudText>

            <MudText Style="font-size: 11px; font-weight: bolder">
                <MudIcon Icon="@Icons.Custom.Brands.MudBlazor" Color="Color.Primary" Style="height:18px; width: 18px" />MudBlazor
            </MudText>

            <MudText Style="font-size: 11px; font-weight: bolder">
                <MudIcon Icon="@Icons.Custom.Brands.Microsoft" Color="Color.Success" Style="height:18px; width: 18px" />.NET
            </MudText>
        </MudContainer>
        <MudContainer>
            <MudText Style="font-size: 11px;">
                Developed By: <MudText Style="font-size: 11px; font-weight: bolder">Guiller Santos</MudText>
            </MudText>
        </MudContainer>
    </MudContainer>
</MudGrid>


@code {
    private TimelinePosition position { get; set; } = TimelinePosition.Alternate;
    private TimelineOrientation orientation { get; set; } = TimelineOrientation.Horizontal;
    private bool reverse { get; set; }

    private bool IsSwitchDisabled()
    {
        if (position == TimelinePosition.Alternate)
            return false;
        else
            reverse = false;
        return true;
    }
}


