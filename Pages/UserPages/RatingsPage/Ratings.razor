@page "/ratings"
@inherits RatingsBase
@layout UserLayout

@if (isLoading)
{
    <Loader></Loader>
}
else
{
    <MudContainer Class="d-flex justify-content-center pt-20 ">
        <MudContainer>
            <MudText Style="color: white;" Class="fs-2 fw-bolder">
                Capstone Ideas Ratings
            </MudText>
            <MudTable Style="width: 100%" Items="Ratings" Striped="true" Hover="true" Height="100%" FixedHeader="true" Elevation="20" Class="table-responsive-sm">
                <HeaderContent>
                    <MudTh>Title</MudTh>
                    <MudTh>Ratings</MudTh>
                </HeaderContent>
                <RowTemplate>
                    <MudTd>@context.Title</MudTd>
                    <MudTd>
                        <MudRating SelectedValue="@context.RatingValue" MaxValue="5" ReadOnly="true" Size="Size.Small" Color="Color.Warning"></MudRating>
                    </MudTd>
                </RowTemplate>
            </MudTable>
        </MudContainer>
    </MudContainer>
}
