            <MudContainer Class="d-grid mt-20 pt-5">
                <MudContainer>
                    <MudText Class="fs-4 fw-bolder" Style="color: white;">Group 2 Members</MudText>
                </MudContainer>
                <MudContainer Class="d-flex flex-nowrap">
                    <MudImage Style="height: 40px; width: 40px" Src="ronaldo.png"></MudImage>
                    <MudImage Style="height: 40px; width: 40px" Src="kurimai.png"></MudImage>
                    <MudImage Style="height: 40px; width: 40px" Src="jane.png"></MudImage>
                    <MudImage Style="height: 40px; width: 40px" Src="kyla.png"></MudImage>
                    <MudImage Style="height: 40px; width: 40px" Src="celvin.png"></MudImage>
                </MudContainer>

                <MudContainer Class="d-flex flex-nowrap">
                    <MudImage Style="height: 40px; width: 40px" Src="perez.png"></MudImage>
                    <MudImage Style="height: 40px; width: 40px" Src="willien.png"></MudImage>
                    <MudImage Style="height: 40px; width: 40px" Src="nina.png"></MudImage>
                    <MudImage Style="height: 40px; width: 40px" Src="me.png"></MudImage>
                </MudContainer>
            </MudContainer>
        </MudContainer>
    </MudContainer>

    <MudImage Class="position-absolute bottom-0 end-0" Style="max-height: 100%; max-width: 100%; height: 600px; width: 600px" Src="About.gif"></MudImage>

    <MudContainer Class="" Style="position: absolute; bottom: 0;">
