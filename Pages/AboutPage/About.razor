@page "/about"
@inherits AboutBase
@layout AboutLayout

@if (isLoading)
{
    <Loader/>
}
else
{
    <MudContainer>
        <MudGrid>
            <MudContainer Style="margin-top: 200px; margin-bottom: 200px;">
                <MudText Style="background-color: rgb(0, 83, 156); color: white; border-radius: 20px;
                            position: absolute; top: 90px; right: 10px; padding: 30px">
                    <MudText Class="fw-bolder fs-1 mb-5">
                        About Us<br />
                    </MudText>
                    Welcome to the Capstone Shared Idea Generator—<br />
                    a comprehensive platform designed to spark creativity, streamline<br />
                    project management, and foster collaboration among students,<br />
                    educators, and professionals. Whether you're seeking inspiration,<br />
                    or evaluating project ideas, our system offers an innovative<br />
                    approach to capstone project development.
                </MudText>
            </MudContainer>
        </MudGrid>

        <MudContainer>
            <MudContainer>
                <MudContainer Style="position: absolute; top: 500px; left: 20px">
                    <MudImage Style="height: 200px; width: 200px; z-index: 100" Src="LoginPage.jpg" />
                    <MudImage Style="height: 200px; width: 200px; z-index: 100" Src="GeneratorPage.jpg" />
                </MudContainer>
                <MudContainer>
                    <MudText Style="position: absolute; top: 600px; left: 470px; background-color: rgb(0, 83, 156); color: white; border-radius: 20px; padding: 50px; z-index: 1000">
                        - The Admin's gateway to manage the Capstone Shared Idea Platform! The Login Page provides secure access to the system with user authentication. Log in as an admin to unlock full control to explore functionalities.<br />
                        - The core of creativity! The Generator Page allows users to explore, brainstorm, and generate innovative capstone ideas effortlessly. Tailor your ideas with various filters and collaborative features.<br />
                        - Discover the best ideas! The Ratings Page showcases highly-rated capstone projects, helping you identify tried-and-true concepts with user feedback and detailed evaluations.<br />
                        - Learn more about us! The About Page provides insights into the system’s purpose, the team behind it, and the impact it aims to create for students and educators worldwide.<br />
                    </MudText>
                </MudContainer>
                <MudContainer Style="position: absolute; top: 700px; left: 20px">
                    <MudImage Style="height: 200px; width: 200px; z-index: 100" Src="RatingsPage.jpg" />
                    <MudImage Style="height: 200px; width: 200px; z-index: 100" Src="AboutPage.jpg" />
                </MudContainer>
            </MudContainer>
        </MudContainer>

        <MudGrid Justify="Justify.Center" Style="padding-top: 1100px;">
            <MudGrid>
                <MudItem xs="12" sm="2">
                    <MudSwitch Label="Reverse" @bind-Value="reverse" Disabled="IsSwitchDisabled()" Color="Color.Primary" />
                </MudItem>
                <MudItem xs="12" sm="5">
                    <MudSelect T="TimelineOrientation" ValueChanged="OnOrientationChange" Label="TimelineOrientation" Dense="true" Variant="Variant.Outlined">
                        <MudSelectItem T="TimelineOrientation" Value="TimelineOrientation.Vertical">Vertical</MudSelectItem>
                        <MudSelectItem T="TimelineOrientation" Value="TimelineOrientation.Horizontal">Horizontal</MudSelectItem>
                    </MudSelect>
                </MudItem>
                <MudItem xs="12" sm="5">
                    <MudSelect T="TimelinePosition" @bind-Value="position" Label="TimelinePosition" Dense="true" Variant="Variant.Outlined">
                        @if (orientation == TimelineOrientation.Vertical)
                        {
                            <MudSelectItem T="TimelinePosition" Value="TimelinePosition.Start">Start</MudSelectItem>
                            <MudSelectItem T="TimelinePosition" Value="TimelinePosition.Left">Left</MudSelectItem>
                            <MudSelectItem T="TimelinePosition" Value="TimelinePosition.Alternate">Alternate</MudSelectItem>
                            <MudSelectItem T="TimelinePosition" Value="TimelinePosition.Right">Right</MudSelectItem>
                            <MudSelectItem T="TimelinePosition" Value="TimelinePosition.End">End</MudSelectItem>
                        }
                        else if (orientation == TimelineOrientation.Horizontal)
                        {
                            <MudSelectItem T="TimelinePosition" Value="TimelinePosition.Top">Top</MudSelectItem>
                            <MudSelectItem T="TimelinePosition" Value="TimelinePosition.Alternate">Alternate</MudSelectItem>
                            <MudSelectItem T="TimelinePosition" Value="TimelinePosition.Bottom">Bottom</MudSelectItem>
                        }
                    </MudSelect>
                </MudItem>
            </MudGrid>

            <MudItem>
                <MudTimeline Reverse="reverse" TimelineOrientation="orientation" TimelinePosition="position">
                    <MudTimelineItem Color="Color.Info" Variant="Variant.Filled">
                        <ItemContent>
                            <MudAlert Class="text-center" Severity="Severity.Info">
                                Admin Login Page
                            </MudAlert>
                        </ItemContent>
                        <ItemOpposite>
                            <MudButton Color="Color.Info" Class="btn-appbar-menu" Href="/authentication">Login</MudButton>
                        </ItemOpposite>
                    </MudTimelineItem>

                    <MudTimelineItem Color="Color.Success" Variant="Variant.Filled">
                        <ItemContent>
                            <MudAlert Class="text-center" Severity="Severity.Success">
                                See more about this Capstone Shared Idea Web Application
                            </MudAlert>
                        </ItemContent>
                        <ItemOpposite>
                            <MudButton Color="Color.Success" Class="btn-appbar-menu">About</MudButton>
                        </ItemOpposite>
                    </MudTimelineItem>

                    <MudTimelineItem Color="Color.Warning" Variant="Variant.Filled">
                        <ItemContent>
                            <MudAlert Class="text-center" Severity="Severity.Warning">
                                Explore and Discover more new Capstone Ideas with Capstone Shared Idea Web Application
                            </MudAlert>
                        </ItemContent>
                        <ItemOpposite>
                            <MudButton Color="Color.Warning" Class="btn-appbar-menu" Href="/generator">Ideas</MudButton>
                        </ItemOpposite>
                    </MudTimelineItem>

                    <MudTimelineItem Color="Color.Error" Variant="Variant.Filled">
                        <ItemContent>
                            <MudAlert Class="text-center" Severity="Severity.Error">
                                Check the best Capstone Ideas
                            </MudAlert>
                        </ItemContent>
                        <ItemOpposite>
                            <MudButton Color="Color.Error" Class="btn-appbar-menu" Href="/ratings">Ratings</MudButton>
                        </ItemOpposite>
                    </MudTimelineItem>
                </MudTimeline>
            </MudItem>

            <MudContainer Style="position: sticky; bottom: 0; left: 0; margin-top: 300px;">
                <MudContainer Class="d-flex gap-6 mb-6">
                    <MudText Class="fs-6 fw-bolder">
                        <MudImage Src="icons8-bootstrap-48.png" Style="height: 25px; width: 25px;" />
                        Bootstrap
                    </MudText>
                    <MudText Class="fs-6 fw-bolder" Style="color: limegreen">C#</MudText>
                    <MudText Class="fs-6 fw-bolder">
                        <MudIcon Icon="@Icons.Custom.Brands.MudBlazor" Color="Color.Primary" />MudBlazor
                    </MudText>
                    <MudText Class="fs-6 fw-bolder">
                        <MudIcon Icon="@Icons.Custom.Brands.Microsoft" Color="Color.Success" />.NET
                    </MudText>
                </MudContainer>
                <MudContainer>
                    <MudText>
                        Developed By: <MudText Class="fs-6 fw-bolder">Guiller Santos</MudText>
                    </MudText>
                </MudContainer>
            </MudContainer>

        </MudGrid>
    </MudContainer>
}