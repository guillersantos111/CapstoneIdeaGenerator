@page "/ratings"
@inherits RatingsBase

@if (isLoading)
{
    <Loader></Loader>
}
else
{
    <MudGrid Justify="Justify.Center">
        <MudPaper Style="margin-top: 100px" Elevation="1">
            <MudText Typo="Typo.h4" Style="color: Black; margin: 20px; font-weight: bolder">Rating View</MudText>
            <MudTable Items="Ratings" Striped="true" Hover="true" Height="740px" Style="width: 900px" FixedHeader="true" Class="table-responsive-sm">
                <HeaderContent>
                    <MudTh>Title</MudTh>
                    <MudTh>Ratings</MudTh>
                </HeaderContent>
                <RowTemplate>
                    <MudTd>@context.Title</MudTd>
                    <MudTd>
                        <MudRating SelectedValue="@context.RatingValue" MaxValue="5" ReadOnly="true" Size="Size.Small" Color="Color.Warning"></MudRating>
                    </MudTd>
                </RowTemplate>
            </MudTable>
        </MudPaper>
    </MudGrid>
}
